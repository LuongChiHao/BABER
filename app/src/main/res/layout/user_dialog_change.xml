<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/bg_white_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:padding="12dp"
        android:text="Chỉnh sửa thông tin"
        android:textColor="@color/cam"
        android:background="@drawable/bg_title_dialog"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tpl_change_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:startIconDrawable="@drawable/ic_baseline_edit_24"
            app:endIconMode="clear_text"
            android:hint="Nhập tên thay đổi">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USER"
            android:id="@+id/edt_change_user_name"
            android:background="@drawable/input_style"
            android:inputType="text"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tpl_change_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:startIconDrawable="@drawable/ic_baseline_edit_24"
            app:endIconMode="clear_text"
            android:hint="Nhập số điện thoại thay đổi">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0909333222"
                android:id="@+id/edt_change_user_id"
                android:background="@drawable/input_style"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tpl_change_user_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:startIconDrawable="@drawable/ic_baseline_edit_24"
            app:endIconMode="password_toggle"
            android:hint="Nhập mật khẩu thay đổi">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                android:id="@+id/edt_change_user_pass"
                android:background="@drawable/input_style"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.whilu.library.CustomButton
                android:id="@+id/btn_changeuser_unsave"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="@color/cam"
                android:layout_marginHorizontal="5dp"
                app:shape_type="rectangle"
                app:round_radius="10dp"
                app:pressed_color="@color/cam"
                app:unpressed_color="@color/background" />

            <com.github.whilu.library.CustomButton
                android:id="@+id/btn_changeuser_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thay đổi"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/cam"
                app:shape_type="rectangle"
                app:round_radius="10dp"
                app:pressed_color="@color/cam"
                app:unpressed_color="@color/background" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>